# Server Configuration
PORT=5000
NODE_ENV=development

# Datastore Configuration
# Directory where JSON datastore files are stored
DATA_DIR=./data

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/smart-mentor

# CORS Configuration
# Allowed origin for browser clients
CORS_ORIGIN=http://localhost:8000

# Body Parser Limits
JSON_LIMIT=1mb
URLENCODED_LIMIT=1mb

# Rate Limiting
# 15 minutes
RATE_LIMIT_WINDOW_MS=900000
# Max number of requests per window per IP
RATE_LIMIT_MAX=100

# If running behind a proxy/load balancer (e.g., Heroku/Render), enable trust proxy
# Set to a number to trust that many proxies; default is 1 when set
TRUST_PROXY=1

# Gemini configuration
GEMINI_API_KEY=
# Defaults to gemini-1.5-flash
GEMINI_MODEL=gemini-1.5-flash
# Timeout in ms
GEMINI_TIMEOUT_MS=15000
